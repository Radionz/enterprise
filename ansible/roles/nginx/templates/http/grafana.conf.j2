{% if nginx_deploy_ssl %}

server {
  server_name              {{ grafana_hostname }} www.{{ grafana_hostname }};

  listen                   443 ssl http2;
  listen                   [::]:443 ssl http2;

  ssl_certificate          /etc/letsencrypt/live/{{ grafana_hostname }}/fullchain.pem;
  ssl_certificate_key      /etc/letsencrypt/live/{{ grafana_hostname }}/privkey.pem;
  ssl_session_cache        shared:SSL:20m;
  ssl_session_timeout      60m;
  ssl_protocols            TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers              ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;
  add_header               Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
  server_tokens off;

  location / {
    proxy_set_header    Host            $host;
    proxy_set_header    X-Forwarded-For $remote_addr;
    proxy_set_header    X-Forwarded-Proto $scheme;
    proxy_pass          http://127.0.0.1:3000;
    proxy_redirect      http://localhost:3000 https://{{ grafana_hostname }};
  }

  location /.well-known/ {
    root                /var/le-challenges/{{ grafana_hostname }};
  }
}

server {
  server_name              {{ grafana_hostname }} www.{{ grafana_hostname }};

  listen                   80;
  listen                   [::]:80;

  return                   301 https://$server_name$request_uri;
}

{% else %}

server {
  server_name              {{ grafana_hostname }} www.{{ grafana_hostname }};

  listen                   80;
  listen                   [::]:80;

  location / {
    proxy_set_header    Host            $host;
    proxy_set_header    X-Forwarded-For $remote_addr;
    proxy_pass          http://127.0.0.1:3000;
    proxy_redirect      http://localhost:3000 http://{{ grafana_hostname }};
  }

  location /.well-known/ {
    root                /var/le-challenges/{{ grafana_hostname }};
  }
}

{% endif %}